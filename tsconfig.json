{
	"compilerOptions": {
		"outDir": "./build/",
		"types": [],
		"lib": [
			"ES2019", // Must match the "target".
			"ES2020.String",
			"DOM",
			"DOM.Iterable"
		],
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"strict": true,
		"declaration": true,
		"target": "es2019",
		"sourceMap": true,
		"allowJs": true,
		"moduleDetection": "force",
		"moduleResolution": "node",
		"module": "es6",
		"skipLibCheck": true,
		"typeRoots": [
			"src"
		]
	},
	"include": [
		"./src/ckeditor.ts",
		"./src/plugins.ts",
	]
}
